<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.dell.genbook.AuthActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/width_image_logo"
        android:layout_height="@dimen/height_image_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/title" />

    <LinearLayout
        android:layout_marginRight="@dimen/margin_left_right_button_group"
        android:layout_marginLeft="@dimen/margin_left_right_button_group"
        android:layout_marginBottom="@dimen/margin_bottom_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <Button
            android:layout_marginBottom="@dimen/margin_bottom_between_button"
            android:id="@+id/btnImportWallet"
            android:textStyle="bold"
            android:fontFamily="se"
            android:textColor="@color/color_text_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_rounded_button"
            android:text="@string/import_wallet" />

        <Button
            android:textColor="@color/color_text_button"
            android:id="@+id/btnGoGenbook"
            android:fontFamily="se"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_rounded_button"
            android:text="@string/go_genbook" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvRequirements"
            android:textSize="@dimen/text_size_requiments"
            android:fontFamily="se"
            android:textColor="@color/white_color_button"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_bottom_between_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_guide_and_requiments" />
    </LinearLayout>
</RelativeLayout>
